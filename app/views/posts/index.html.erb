<h1> > Pantalla Administrativa < </h1>
<h2> Publicaciones </h2>

<%= notice %> <br><br><br>

<table class="mytable" align="center">
	<tr>
		<th> Título </th>
		<th> Contenido </th>
		<th> Fecha Creación </th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td> <%= post.title %> </td>
			<td> <%= post.text %> </td>
			<td> <%= post.created_at %> </td>

			<td> <%= link_to 'Editar', edit_post_path(post) %> </td>
			<td> <a href="/posts/delete/<%= post.id %>"> Eliminar </a> </td>
		</tr>
	<% end %>
</table>

