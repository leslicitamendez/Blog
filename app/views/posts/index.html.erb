<h1> Blog </h1>
<h2> Publicaciones </h2> <br>

<%= notice %> <br><br>

<table>
	<tr>
		<th> Titulo </th>
		<th> Contenido </th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td> <%= post.title %> </td>
			<td> <%= post.text %> </td>

			<td> <a href="/posts/show/<%= post.id %>"> Mostrar </a> </td>
			<td> <a href="/posts/<%= post.id %>"> Editar </a> </td>
			<td> <a href="/posts/delete/<%= post.id %>"> Eliminar </a> </td>
		</tr>
	<% end %>
</table>

<br>
<a href="/posts/new"> Nuevo </a>