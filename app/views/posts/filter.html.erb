<h3>:: Resultados Filtro </h3>
<br>
<% aux=[] %>
  <% @post.each do |post| %>
    <% cat=[] %>
    <% var=0 %>
    <% (0..post.category.length-1).each do |pos|%>
    <% cat[var]=post.category[pos] if post.category[pos] != " " %>
    <% var+=1 if post.category[pos]!= " " %>
    <% aux.push(post) if @category == ((cat.to_a)*"").gsub(",","") %>
    <% cat=[] if post.category[pos] == " " || @category == ((cat.to_a)*"").gsub(",","") %>
  <% end %>
<% end %>
<table name="mytable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
  </thead>

  <tbody>
    <% aux.each do |post| %>

      <tr>
        <td> <%= post.title %> </td>
        <td> <%= post.text %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

