<% if @post.errors.any? %>
	<%= @post.errors.full_messages.each do |msg| %>
		<li> <%= msg %> </li>
	<% end %>
<% end %>

<h1> Nueva Publicacion </h1>

<%= form_for :post, url: posts_path do |f| %>
	<p>
		<%= f.label("Titulo:") %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label("Contenido:") %> <br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit("Crear") %>
	</p>
<% end %>
